{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "Desmos Gallery Download",
    "description": "Download the gallery of Desmos sketches (unofficial)",
    "version": "0.5.0",
    "icons": {
        "32": "icons/32x32.png",
        "64": "icons/64x64.png",
        "128": "icons/128x128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Desmos Gallery Download",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["scripting", "activeTab", "tabs","nativeMessaging"], //do we need nateiveMessaging? gedit 
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "Background-Service-Worker.js"
    },
    "content_scripts": [{
        "js": ["jszip.min.js","Foreground-Content.js"],
        "matches": ["https://teacher.desmos.com/dashboard/*"]
    }],
    "web_accessible_resources": [
    {
      "resources": [
        "galleryTemplate/style.css",
        "galleryTemplate/index.html",
        "galleryTemplate/script.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
